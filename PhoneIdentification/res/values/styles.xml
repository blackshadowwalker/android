<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>
    <!-- 全局字体样式 -->
    <style name="DefaultFontStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#0000CC</item>
    </style>

    <!-- 全局背景色 -->
    <style name="DefaultBgColor" parent="@style/DefaultFontStyle">
        <item name="android:background">#e7e7e7</item>
    </style>

    <!-- 全局样式 -->
    <style name="DefaultStyle" parent="@style/DefaultBgColor"></style>

    <style name="radioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:padding">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/radiobg_press</item>
        <item name="android:button">@null</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>

    <style name="button_style" >
        <item name="android:background">@drawable/loginbtn</item>
    </style>

</resources>