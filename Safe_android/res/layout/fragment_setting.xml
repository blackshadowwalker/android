<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/topbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/content_bg" >

            <TextView
                android:id="@+id/login_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:text="@string/sys_infos"
                android:textColor="#ff333333"
                android:textSize="14.0dip" />

            <RelativeLayout
                android:id="@+id/ly1"
                style="@style/item_bg_top_layout"
                android:layout_below="@id/login_setting" >

                <TextView
                    android:id="@+id/login_opt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/save_login_info"
                    android:textColor="#ff333333"
                    android:textSize="12.0dip" />

                <CheckBox
                    android:id="@+id/opt1"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/login_opt1"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/login_opt1"
                    android:layout_marginRight="12.0dip" />
            </RelativeLayout>

            <View
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_below="@id/ly1"
                android:background="@drawable/item_shape_line" />

            <RelativeLayout
                android:id="@+id/ly2"
                style="@style/item_bg_mid_layout"
                android:layout_below="@id/l1" >

                <TextView
                    android:id="@+id/login_opt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/recieve_infos"
                    android:textColor="#ff333333"
                    android:textSize="12.0dip" />

                <CheckBox
                    android:id="@+id/opt2"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/login_opt2"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/login_opt2"
                    android:layout_marginRight="12.0dip" />
            </RelativeLayout>
            <View
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_below="@id/ly2"
                android:background="@drawable/item_shape_line" />

            <RelativeLayout
                android:id="@+id/ly3"
                style="@style/item_bg_mid_layout"
                android:layout_below="@id/l2" >

                <TextView
                    android:id="@+id/sys_sound_prompt_txet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/sys_sound_prompt"
                    android:textColor="#ff333333"
                    android:textSize="12.0dip" />

                <CheckBox
                    android:id="@+id/sys_sound_prompt"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/sys_sound_prompt_txet"
                    android:layout_marginRight="12.0dip" />
            </RelativeLayout>
            <View
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_below="@id/ly3"
                android:background="@drawable/item_shape_line" />

            <RelativeLayout
                android:id="@+id/ly4"
                style="@style/item_bg_bottom_layout"
                android:layout_below="@id/l3" >

                <TextView
                    android:id="@+id/sys_vibrate_prompt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/sys_vibrate_prompt"
                    android:textColor="#ff333333"
                    android:textSize="12.0dip" />

                <CheckBox
                    android:id="@+id/sys_vibrate_prompt"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/sys_vibrate_prompt_text"
                    android:layout_marginRight="12.0dip" />
            </RelativeLayout>
            
        </RelativeLayout>
        
    </LinearLayout>

</ScrollView>