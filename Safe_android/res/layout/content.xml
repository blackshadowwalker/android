<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/content_title"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/content_title"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/if_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/content_title"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/content_title"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="#FFFFCC" />

    <ListView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/content_title"
        android:cacheColorHint="#00000000"
        android:scrollbars="none"
        android:background="#e7e4df"
        android:textColor="@android:color/darker_gray"
        android:textSize="17sp" >
    </ListView>

</RelativeLayout>